<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/topic_item_height"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">
    <ImageView
        android:id="@+id/pm_icon"
        android:layout_weight="0"
        android:layout_width="@dimen/topic_icon_size"
        android:layout_height="@dimen/topic_icon_size"
        android:background="@drawable/topic_icon_circle"
        android:layout_marginRight="@dimen/topic_icon_container_horizontal_padding"
        android:layout_marginTop="@dimen/topic_icon_container_vertical_padding"
        android:layout_marginBottom="@dimen/topic_icon_container_vertical_padding"
        android:padding="8dp"
        />
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/pm_title"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/topic_subject_height"
            android:layout_marginTop="@dimen/topic_item_vertical_padding"
            android:maxLines="2"
            android:ellipsize="end"
            android:scrollHorizontally="true"
            android:gravity="center_vertical|left"
            android:textAppearance="@style/TextAppearance"
            tools:text="Subject"/>
        <TextView
            android:id="@+id/pm_last_post_infos"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:textAppearance="@style/TextAppearance.Details"
            tools:text="Author - Date" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/pm_unread_by_recipient_indicator"
        android:layout_weight="0"
        android:gravity="center"
        android:layout_width="@dimen/topic_unread_count_size"
        android:layout_height="@dimen/topic_unread_count_size"
        android:layout_marginRight="@dimen/topic_unread_count_margin"
        android:layout_marginLeft="@dimen/topic_unread_count_margin"
        android:layout_marginTop="@dimen/topic_unread_count_top_margin"
        />
</LinearLayout>