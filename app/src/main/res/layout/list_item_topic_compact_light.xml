<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/topic_item_height_compact"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">
    <ImageView
        android:id="@+id/topic_icon"
        android:layout_weight="0"
        android:layout_width="@dimen/topic_icon_size_compact"
        android:layout_height="@dimen/topic_icon_size_compact"
        android:background="@drawable/topic_icon_circle"
        android:layout_marginRight="@dimen/topic_icon_container_horizontal_padding"
        android:layout_marginTop="@dimen/topic_icon_container_vertical_padding_compact"
        android:layout_marginBottom="@dimen/topic_icon_container_vertical_padding_compact"
        android:padding="4dp"
        />
    <TextView
        android:id="@+id/topic_subject"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|left"
        android:maxLines="1"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:textAppearance="@style/TextAppearance"
        tools:text="Subject"/>

    <TextView
        android:id="@+id/topic_unread_count"
        android:layout_weight="0"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Unread"
        android:layout_width="@dimen/topic_unread_count_size"
        android:layout_height="@dimen/topic_unread_count_size"
        android:layout_marginRight="@dimen/topic_unread_count_margin"
        android:layout_marginLeft="@dimen/topic_unread_count_margin"
        />
</LinearLayout>