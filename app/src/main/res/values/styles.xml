<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <style name="Redface"/>

    <!-- Text styles -->
    <style name="TextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="TextAppearance.Compact" parent="TextAppearance">
        <item name="android:textSize">@dimen/text_size_details</item>
    </style>

    <style name="TextAppearance.Light">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="TextAppearance.Details" parent="TextAppearance.Light">
        <item name="android:textSize">@dimen/text_size_details</item>
        <item name="android:textColor">?attr/textColorSecondary</item>
    </style>

    <style name="TextAppearance.Unread" parent="TextAppearance.Light">
        <item name="android:textSize">@dimen/topic_unread_count_text_size</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="FontStyle">
    </style>

    <style name="FontStyle.Small">
        <item name="font_small">10sp</item>
        <item name="font_medium">11sp</item>
        <item name="font_large">13sp</item>
    </style>

    <style name="FontStyle.Normal">
        <item name="font_small">13sp</item>
        <item name="font_medium">14sp</item>
        <item name="font_large">15sp</item>
    </style>

    <style name="FontStyle.Large">
        <item name="font_small">15sp</item>
        <item name="font_medium">16sp</item>
        <item name="font_large">17sp</item>
    </style>

    <style name="FontStyle.XLarge">
        <item name="font_small">16sp</item>
        <item name="font_medium">17sp</item>
        <item name="font_large">18sp</item>
    </style>

    <style name="ListWithDividers">
        <item name="android:divider">@drawable/list_divider_dark</item>
        <item name="android:dividerHeight">2dp</item>
    </style>

    <style name="NavigationDrawer">
        <item name="android:background">?attr/appBackgroundColor</item>
    </style>

    <style name="NavigationDrawerCategory">
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-light</item>
    </style>

    <style name="Widget.HFR4Droid.HeaderBar.Spinner.Base" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:textColor">?attr/textColorPrimary</item>

        <!-- Seems to be an android 21+ attribute
        <item name="android:overlapAnchor">true</item>
        -->
    </style>

    <style name="RedfaceTopicPagerStrip">
        <item name="android:background">?attr/pagerTitleStripBackground</item>
        <item name="android:textColor">@color/tabs_text_color</item>
    </style>

    <!-- Toolbars -->
    <style name="Widget.HFR4Droid.HeaderBar.Spinner" parent="Widget.HFR4Droid.HeaderBar.Spinner.Base" />

    <style name="RedfaceToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">?attr/toolbarPopupTheme</item>
        <item name="theme">?attr/toolbarTheme</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetLeft">0dp</item>
    </style>

    <style name="RedfaceSmileysToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">?attr/toolbarPopupTheme</item>
        <item name="theme">?attr/toolbarTheme</item>
    </style>

    <style name="ReplyActionsToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/replyToolbarBackground</item>
        <item name="popupTheme">?attr/toolbarPopupTheme</item>
        <item name="theme">?attr/toolbarTheme</item>
    </style>

    <style name="ReplyOptionsToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/replyToolbarBackground</item>
        <item name="android:padding">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="popupTheme">?attr/toolbarPopupTheme</item>
        <item name="theme">?attr/toolbarTheme</item>
    </style>

    <style name="ReplyOptionsIcon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ReplyDialog" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <!-- Fill the screen -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>

        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>

        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ReplyDialogImageSelectionButton">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">?attr/replyToolbarBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="SmileysSelector">
        <item name="android:background">?attr/appBackgroundColor</item>
    </style>

    <!-- Preferences -->
    <style name="TextAppearance.HomePreference">
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- SearchView style for smiley selector -->
    <style name="RedfaceActionBarWidgetTheme.Light" parent="Widget.AppCompat.Light.SearchView">

    </style>

    <style name="RedfaceActionBarWidgetTheme.Dark" parent="Widget.AppCompat.SearchView">

    </style>

    <style name="RedfaceListHeader">
        <item name="android:background">?attr/tabletLandscapePagerBackground</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Contextual action bar -->
    <style name="TextAppearance.ActionMode" parent="@android:style/TextAppearance">
        <item name="android:textColor">?attr/textColorInverse</item>
    </style>

    <style name="Redface.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/TextAppearance.ActionMode</item>
    </style>

    <style name="Redface.ImageDetails" />
    <style name="Redface.ImageDetails.MainText">
        <item name="android:textSize">@dimen/image_detail_item_main_text_size</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="Redface.ImageDetails.SecondaryText">
        <item name="android:textSize">@dimen/image_detail_item_secondary_text_size</item>
        <item name="android:textColor">?attr/textColorSecondary</item>
    </style>

    <style name="Redface.ProfileDetails" />

    <style name="Redface.ProfileDetails.Username">
        <item name="android:textSize">@dimen/profile_detail_item_username_text_size</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Redface.ProfileDetails.Status">
        <item name="android:textSize">@dimen/profile_detail_item_status_text_size</item>
        <item name="android:textColor">?attr/textColorSecondary</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Redface.ProfileDetails.MainText">
        <item name="android:textSize">@dimen/profile_detail_item_main_text_size</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="Redface.ProfileDetails.SecondaryText">
        <item name="android:textSize">@dimen/profile_detail_item_secondary_text_size</item>
        <item name="android:textColor">?attr/textColorSecondary</item>
    </style>

    <style name="Redface.ProfileDetails.Heading">
        <item name="android:textSize">@dimen/profile_detail_heading_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Redface.ProfileDetails.Smilies" />

    <style name="Redface.ProfileDetails.Smilies.Container">
        <item name="android:padding">8dp</item>
    </style>

    <style name="Redface.ProfileDetails.Smilies.SmileyCode">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="Redface.ProfileDetails.Smilies.SmileyAction">
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">?attr/textColorPrimary</item>
    </style>
</resources>
